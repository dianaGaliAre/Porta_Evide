<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="equitnero.utng.edu.mx.practica.MainActivity">

    <Button
        android:id="@+id/btnOpcion1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lbl_opcion1">
    </Button>
    <Button
        android:id="@+id/btnOpcion2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lbl_opcion2">
    </Button>
    <Button
        android:id="@+id/btnOpcion3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lbl_opcion3">
    </Button>
    <Button
        android:id="@+id/btnOpcion4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lbl_opcion4">
    </Button>
    <ImageButton
        android:id="@+id/btn_imagen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/img1"
        />
    <TextView
        android:id="@+id/txt_desplazamiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lbl_desplazamineto"/>
</LinearLayout>
